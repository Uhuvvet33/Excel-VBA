'-----------------Farklı excel dosyalarını sayfa olarak birleştirmek.
'Bu bilgi alıntıdır.

Sub macro1()
Dim Filename As String

Path = "C:\Users\user\Desktop\LISTE\" 'yolu kendi dosyalarınızı bulunduğu yol ile değiştirin
Filename = Dir(Path & "*.xlsx")
  Do While Filename <> ""
  Workbooks.Open Filename:=Path & Filename, ReadOnly:=True
     For Each Sheet In ActiveWorkbook.Sheets
     Sheet.Copy after:=ThisWorkbook.Sheets(1)
     ' sayfa adı ile dosya adı aynı olması için yazdığımız kod
     Dim LArray() As String
     LArray = Split(Filename, ".")
     Sheets(2).Name = LArray(0)
    
  Next Sheet
     Workbooks(Filename).Close
     Filename = Dir()
  Loop
End Sub
'-----------------

'-----------------Farklı sayfalardaki verileri sayfa1 de toplamak
Sub AktarTopla()
Dim OgrTpl(39) As Integer
Dim OgrEk(39) As Integer

For j = 2 To Sheets.Count 'Sayfalar Arasında Gezinmek
For i = 1 To 39 'Sütünlarda gezinmek
    OgrTpl(i) = Sheets(1).Range("C6").Cells(i, 1).Value
    OgrEk(j) = Sheets(2).Range("C6").Cells(i, 1).Value
    Sheets(1).Range("C6").Cells(i, 1).Value = Int(OgrTpl(i)) + Int(OgrEk(j))
Next i
Next j
  Sheets(1).Range("K3").Value = Format(Now) 'İşlem tarihi ve Saati
  Sheets(1).Select  'Sayfa1 Seçmek
End Sub
